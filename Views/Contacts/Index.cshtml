@model List<Phonebook.Models.Contact>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Contacts" class="btn btn-success">Create</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <td>First Name</td>
                <td>Last Name</td>
                <td>Email</td>
                <td>Mobile</td>
                <td>Manage</td>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.Mobile</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Contacts" class="btn btn-warning"
                            asp-route-id="@item.Id">Edit</a>
                            <a asp-action="Delete" asp-controller="Contacts" class="btn btn-danger"
                            asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>